<div class="layout">   
    <div class="sign-bg">
        <div class="start">
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-md-6 col-lg-4">
                        <div class="register-content">
                            <div class="login-header">
                                <h1><i class="ti-key"></i>Chat Room</h1>
                            </div>                           
                            {{> chooseAvatar}}
                            <form class="login-up">
                                <div class="form-group">
                                    <input type="text" id="input-name" class="form-control" placeholder="User Name"
                                        required="">
                                    <button class="btn icon"><i class="ti-user"></i></button>
                                </div>
                                <button id='enter-to-chat' class="btn button">Enter to chat</button>
                            </form>                           
                        </div>                        
                    </div>                    
                </div>
            </div>
        </div>
    </div>
    <!-- End of Sign In -->
</div>